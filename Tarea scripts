

(defun area-rectangulo()
  (princ "Por favor, teclea una base: ")
  (setq base (read))
  (princ "Por favor, teclea una altura: ")
  (setq altura (read))
  (format t "El area del rectangulo es: ~7F~%" (* base altura))
)


(defun area-circulo()
  (princ "Escribe el radio del circulo: ")
  (setq radio (read))
  (format t "El area de tu circulo es ~7F~%" (* pi radio radio))
)

(defun promedio()
  (princ "Escribe el primer numero: ")
  (setq nume1 (read))
  (princ "Escribe el segundo numero: ")
  (setq nume2 (read))
  (princ "Escribe el tercer numero: ")
  (setq nume3 (read))
  (princ "Escribe el cuarto numero: ")
  (setq nume4 (read))
  (princ "Escribe el quinto numero: ")
  (setq nume5 (read))
  (format t "El promedio de los 5 numeros es: ~5F~%" (/ (+ nume1 nume2 nume3 nume4 nume5) 5))
)

(defun pies-centimetros()
  (princ "Escribe el numero de pies a convertir a centimetros: ")
  (setq pies(read))  
  (format t "La conversion de ~4F pies a centimetros es: ~8F cm ~%" pies (* pies 30.48))
)

(defun porcentajeMH()
  (princ "Escribe el numero de mujeres: ")
  (setq numwom (read))
  (princ "Escribe el numero de hombres: ")
  (setq nummen (read))
  (format t "El procentaje de mujeres es: ~6F~%El porcentaje de hombres es: ~6F~%" (* 100 (/ numwom (+ numwom nummen))) (* 100 (/ nummen (+ nummen numwom))))
)
